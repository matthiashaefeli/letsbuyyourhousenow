<h1>Clients</h1>
<%= link_to 'New Client', new_client_path %>
<div>
  <table>
    <thead>
      <tr>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Tel</td>
        <td>Address</td>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= link_to client.first_name, client_path(client.id) %></td>
          <td><%= client.first_name %></td>
          <td><%= client.email %></td>
          <td><%= client.tel %></td>
          <td><%= client.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>